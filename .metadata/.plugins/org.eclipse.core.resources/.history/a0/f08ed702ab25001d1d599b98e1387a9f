package trans.client;

import java.io.FileInputStream;
import java.io.IOException;
import java.net.URLDecoder;
import java.util.Properties;

public class ClientSide
{
	public static String sourcePath, ip;
	public static int port;
	
	public static void main(String[] args)
	{
		Transfer transfer = new Transfer(sourcePath);
		
		transfer.existDir();
		
		transfer.search("");
		
		System.out.println("[데이터 보내기 성공]");
	}
	
	public static void loadProperties()
	{
		String propertiesPath = ClientSide.class.getResource("client.properties").getPath();
		Properties properties = new Properties();
		
		try
		{
			propertiesPath = URLDecoder.decode(propertiesPath, "utf-8");
			properties.load(new FileInputStream(propertiesPath));
			
		} catch (IOException e)
		{
			e.printStackTrace();
			System.out.println("설정 파일 오류");
			return;
		}
		
		sourcePath = properties.getProperty("path");
		port = Integer.parseInt(properties.getProperty("port"));
		ip = properties.getProperty("ip");
	}
}
